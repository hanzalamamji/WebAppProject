
@{
    ViewBag.Title = "Tips";
}

<link href="~/Content/css/Style.css" rel="stylesheet" />




@*Banner Start*@
<div class="Category_image-container">
    <div class="Category_image-overlay">
        <div class="Banner-content">
            <h2 class="Category_banner-title ">Enhance Your Energy</h2>
            <h2 class="Category_banner-title ">Efficiency !</h2>
            <div class="Category_banner_about_div">
                <p class="Category_banner_about">Take the quiz and get valuable energy saving tips based on your result</p>
            </div>

        </div>
    </div>
</div>
@*Banner End*@

@*Tips  Div Start*@
<div id="Tips_Container">
    <div class="Gif_div container" id="autoscrolltodiv">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 text-center">
                <img src="~/Content/Images/Gif/splash.gif" alt="GIF" width="100%;">
            </div>

        </div>
    </div>
</div>

@using (Html.BeginForm("UpdateTips", "Microwave", FormMethod.Post))
{
    <div class="Tips_Div container-fluid" style="display: none; background: #F2FAFF; height:100%">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 mt-5 text-center">
                <img src="~/Content/Images/Categories Icons/bulb.png">
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 mt-2 text-center">
                <h2 class="Tips_Heading">
                    Energy saving tips for Microwave
                </h2>
            </div>
        </div>
        <div class="row Tips_Container">
            <!-- Hardcoded tip 1 -->
            @if (ViewBag.HardcodedTips1 != null)
            {
                var tip1 = ViewBag.HardcodedTips1 as List<string>;
                if (tip1.Count > 0)
                {
                    <div class="Tip_Div1 col-lg-3 col-md-6 col-sm-12">
                        <h4>Tip no 1</h4>
                        <p class="tip_paragraph">
                            @tip1[0] <!-- Display the first tip -->
                        </p>
                    </div>
                }
            }

            <!-- Hardcoded tip 2 -->
            @if (ViewBag.HardcodedTips2 != null)
            {
                var tip2 = ViewBag.HardcodedTips2 as List<string>;
                if (tip2.Count > 0)
                {
                    <div class="Tip_Div2 col-lg-3 col-md-6 col-sm-12">
                        <h4>Tip no 2</h4>
                        <p class="tip_paragraph">
                            @tip2[0] <!-- Display the first tip -->
                        </p>
                    </div>
                }
            }

            <!-- Hardcoded tip 3 -->
            @if (ViewBag.HardcodedTips3 != null)
            {
                var tip3 = ViewBag.HardcodedTips3 as List<string>;
                if (tip3.Count > 0)
                {
                    <div class="Tip_Div3 col-lg-3 col-md-6 col-sm-12">
                        <h4>Tip no 3</h4>
                        <p class="tip_paragraph">
                            @tip3[0] <!-- Display the first tip -->
                        </p>
                    </div>
                }
            }

            <!-- Hidden input fields for affiliate link and image address -->
            <input hidden type="text" class="affilaite" placeholder="Affiliate Link Display Here" name="AffiliateLink" readonly value="@ViewBag.AffiliateLink">
            <input hidden type="text" class="affilaite" placeholder="Affiliate Link Display Here" name="ImageAddress" readonly value="@ViewBag.ImageAddress">
        </div>
        <div class="row mt-3">
            <div class="col-lg-12 col-md-12 col-sm-12 mt-5 mb-5 text-center-mobile" style="gap:6px;">
                <button id="Leave_btn_1" class="btn btn-primary rounded-pill">Leave quiz</button>
                <button type="submit" id="Next_btn_1" href="@Url.Action("Index", "Freezer")" class="btn btn-secondary rounded-pill">Next</button>
            </div>
        </div>
    </div>
}

@*Tips  Div End*@



<script>
    setTimeout(function () {
        document.querySelector('.Gif_div').style.display = 'none';
        document.querySelector('.Tips_Div').style.display = 'block';
    }, 3000);
</script>
