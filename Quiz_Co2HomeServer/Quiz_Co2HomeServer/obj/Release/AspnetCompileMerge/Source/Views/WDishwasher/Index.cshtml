<script>
    var currentValue = 1;

    function updateValueDisplay() {
        var valueSpan = document.getElementById("valueSpan");
        valueSpan.innerHTML = currentValue;
    }
    function incrementValue() {
        currentValue += 1;
        updateValueDisplay();
    }
    function decrementValue() {
        if (currentValue > 1) {
            currentValue -= 1;
            updateValueDisplay();
        }
    }
    window.onload = function () {
        updateValueDisplay();
    };
</script>
