        var currentValue = 1;

        function updateValueDisplay() {
            var valueSpan = document.getElementById("valueSpan");
            valueSpan.innerHTML = currentValue;
            // Update the hidden input field with the current value
            document.getElementById("refrigeratorCount").value = currentValue;
        }

        function incrementValue() {
            currentValue += 1;
            updateValueDisplay();
        }

        function decrementValue() {
            if (currentValue > 1) {
