        @{
            if (ViewBag.RefrigeratorNames != null)
            {
                var tips = ViewBag.RefrigeratorNames as List<string>;
                int tipNumber = 1; // Start with Tip no 2
                foreach (var tip in tips)
                {
                    <div class="Tip_Div1 col-lg-3 col-md-6 col-sm-12">
                        <h4>Tip no @tipNumber</h4>
                        <p class="tip_paragraph">
                            @tip
                        </p>
                    </div>
                    tipNumber++;
                }
            }
        }

        @{
            if (ViewBag.RefrigeratorNames2 != null)
            {
                var tips = ViewBag.RefrigeratorNames2 as List<string>;
                int tipNumber = 2; // Start with Tip no 2
                foreach (var tip in tips)
                {
                    <div class="Tip_Div2 col-lg-3 col-md-6 col-sm-12">
                        <h4>Tip no @tipNumber</h4>
                        <p class="tip_paragraph">
                            @tip
                        </p>
                    </div>
                    tipNumber++;
                }
            }
        }

        @{
            if (ViewBag.RefrigeratorNames3 != null)
            {
                var tips = ViewBag.RefrigeratorNames3 as List<string>;
                int tipNumber = 3; // Start with Tip no 3
                foreach (var tip in tips)
                {
                    <div class="Tip_Div3 col-lg-3 col-md-6 col-sm-12">
                        <h4>Tip no @tipNumber</h4>
                        <p class="tip_paragraph">
                            @tip
                        </p>
                    </div>
                    tipNumber++;
                }
            }
        }



        @*<div class="Tip_Div2 col-lg-3 col-md-6 col-sm-12">
                <h4>Tip no 2</h4>
                <p class="tip_paragraph">
                    This survey will help you assess the energy efficiency of your household appliances and provide recommendations for more eco-friendly options
                </p>
            </div>
            <div class="Tip_Div3 col-lg-3 col-md-6 col-sm-12">
                <h4>Tip no 3</h4>
                <p class="tip_paragraph">
                    This survey will help you assess the energy efficiency of your household appliances and provide recommendations for more eco-friendly options
                </p>
            </div>*@
    </div>

    <input type="text" hidden class="affilaite" placeholder="Affilaite Link Display Here" name="AffilaiteLink" readonly value="@ViewBag.AffilaiteLink">
