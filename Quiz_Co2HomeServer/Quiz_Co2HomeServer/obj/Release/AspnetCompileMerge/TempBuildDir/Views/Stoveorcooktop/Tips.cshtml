
@{
    ViewBag.Title = "Tips";
}

<link href="~/Content/css/Style.css" rel="stylesheet" />
<style>
    .dropdown_menu {
        font-size: 16px; /* Adjust the font size as needed */
        padding-right: 15px; /* Add some right padding to create space for the larger icon */
        background-image: url('../../Content/Images/Categories/chevron-down.png'); /* Replace with the path to your icon image */
        background-size: 20px; /* Adjust the size of the icon */
        background-position: calc(100% - 25px) center; /* Position the icon slightly left of the right edge and center vertically */
        background-repeat: no-repeat; /* Prevent the icon from repeating */
        appearance: none; /* Remove default appearance styles */
        -webkit-appearance: none; /* Remove default appearance styles for Safari */
    }
</style>




@*Banner Start*@
<div class="Category_image-container">
    <div class="Category_image-overlay">
        <div class="Banner-content">
            <h2 class="Category_banner-title ">Enhance Your Energy</h2>
            <h2 class="Category_banner-title ">Efficiency !</h2>
            <div class="Category_banner_about_div">
                <p class="Category_banner_about">Take the quiz and get valuable energy saving tips based on your result</p>
            </div>

        </div>
    </div>
</div>
@*Banner End*@

@*Tips  Div Start*@
<div id="Tips_Container">
    <div class="Gif_div container" id="autoscrolltodiv">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 text-center">
                <img src="~/Content/Images/Gif/splash.gif" alt="GIF" width="100%;">
            </div>

        </div>
    </div>
</div>
@using (Html.BeginForm("UpdateTips", "Stoveorcooktop", FormMethod.Post))
{
<div class="Tips_Div container-fluid" style="display: none; background: #F2FAFF; height:100%">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 mt-5 text-center">
            <img src="~/Content/Images/Categories Icons/bulb.png">
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 mt-2 text-center">
            <h2 class="Tips_Heading">
                Energy saving tips for Stove
            </h2>
        </div>
    </div>
    <div class="row Tips_Container">
        @*<div class="Tip_Div1 col-lg-3 col-md-6 col-sm-12">
                <h4>Tip no 1</h4>
                <p class="tip_paragraph">
                    This survey will help you assess the energy efficiency of your household appliances and provide recommendations for more eco-friendly options
