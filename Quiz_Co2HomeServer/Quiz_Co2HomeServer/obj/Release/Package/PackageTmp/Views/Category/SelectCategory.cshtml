<link href="~/Content/css/Style.css" rel="stylesheet" />

<!-- Add this at an appropriate place in your view -->
<div>
    <h3 hidden id="username">@Model.Username</h3>
</div>

<script>
    // Get the text from the <h3> element
    var usernameElement = document.getElementById("username");
    var usernameText = usernameElement.innerText;

    // Save the text as "username" in local storage
    localStorage.setItem("username", usernameText);

    // You can retrieve the username from local storage like this:
    var savedUsername = localStorage.getItem("username");
    console.log("Username retrieved from local storage: " + savedUsername);
</script>
