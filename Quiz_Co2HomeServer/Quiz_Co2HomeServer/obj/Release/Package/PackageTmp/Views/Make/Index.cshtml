@{
    ViewBag.Title = "Make";
}

@using (Html.BeginForm("QuestionUpdate", "Make", FormMethod.Post))
{
    for (int i = 1; i <= ViewBag.NoOfRefrigilators; i++)
    {
        <div class="Que_2_div2">
            <h6 class="R2_Title" style="margin-top: 10px;">
                R @i Make
            </h6>
            <select class="dropdown_menu" name="makes">

                @if (i == 1) // Check if it's the 2nd dropdown
                {
                    foreach (var name in ViewBag.RefrigeratorNames)
                    {
                        <option value="@name">@name</option>
                    }
                }


                @if (i == 2) // Check if it's the 2nd dropdown
                {
                    foreach (var name in ViewBag.RefrigeratorNames2)
                    {
                        <option value="@name">@name</option>
                    }
                }

                @if (i == 3) // Check if it's the 3rd dropdown
                {
                    foreach (var name in ViewBag.NewOptionsForThirdDropdown)
                    {
                        <option value="@name">@name</option>
                    }
                }

                @*else
                {
                    foreach (var name in ViewBag.RefrigeratorNames)
                    {
                        <option value="@name">@name</option>
                    }
                }*@
            </select>
        </div>
    }

    <input type="hidden" name="username" value="11" />
    <!-- Replace with your actual username -->

    <div class="row mt-3">
        <div class="col-lg-12 col-md-12 col-sm-12 mt-5 text-center-mobile" style="gap:6px;">
            <button id="Leave_btn_1" class="btn btn-primary rounded-pill">Leave quiz</button>
            <button id="Next_btn_1" type="submit" class="btn btn-secondary rounded-pill">Next</button>
        </div>
    </div>
}